@using Entities.Dto.ProductDtos


@model ProductAddDto
@{
    ViewData["Title"] = "Yeni Məhsul Əlavə Et";
}
<h2>Yeni Məhsul Əlavə Et</h2>

<form asp-action="AddProduct" method="post" enctype="multipart/form-data">
    <div class="col-md-6">
	
		<div class="form-group">
			<label asp-for="Name" class="control-label"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>

		
		<div class="form-group">
			<label	 asp-for="Description" class="control-label"></label	>
			<textarea asp-for="Description" class="form-control"></textarea>
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>

		
		<div class="form-group">
			<label asp-for="Spesification" class="control-label"></label>
			<textarea asp-for="Spesification" class="form-control"></textarea>
			<span asp-validation-for="Spesification" class="text-danger"></span>
		</div>

	
		<div class="form-group">
			<label asp-for="Price" class="control-label"></label>
			<input asp-for="Price" class="form-control" type="number" step="0.01" />
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>

	
		<div class="form-group">
			<label asp-for="IsDiscount" class="control-label"></label>
			<input asp-for="IsDiscount" class="form-check-input" type="checkbox" />
			<span asp-validation-for="IsDiscount" class="text-danger"></span>
		</div>

	
		<div class="form-group">
			<label asp-for="DiscountPrice" class="control-label"></label>
			<input asp-for="DiscountPrice" class="form-control" type="number" step="0.01" />
			<span asp-validation-for="DiscountPrice" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="IsDelivery" class="control-label"></label>
			<input asp-for="IsDelivery" class="form-check-input" type="checkbox" />
			<span asp-validation-for="IsDelivery" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="ShippingCost" class="control-label"></label>
			<input asp-for="ShippingCost" class="form-control" type="number" step="0.01" />
			<span asp-validation-for="ShippingCost" class="text-danger"></span>
		</div>
	
		<div class="form-group">
			<label asp-for="Stock" class="control-label"></label>
			<input asp-for="Stock" class="form-control" type="number" />
			<span asp-validation-for="Stock" class="text-danger"></span>
		</div>
	
		<div class="form-group">
			<label asp-for="IsFeatured" class="control-label"></label>
			<input asp-for="IsFeatured" class="form-check-input" type="checkbox" />
			<span asp-validation-for="IsFeatured" class="text-danger"></span>
		</div>

	
		<div class="form-group">	
			<label class="control-label">Categories</label>
			<select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
			<span asp-validation-for="CategoryId" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label class="control-label">Brands</label>
			<select asp-for="BrandId" class="form-control" asp-items="ViewBag.Brands"></select>
			<span asp-validation-for="BrandId" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label for="productImages" class="control-label">Məhsul Şəkilləri</label>
			<input type="file" name="productImages" class="form-control" multiple />
		</div>
    </div>


    <div class="form-group">
        <button type="submit" class="btn btn-primary">Əlavə Et</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}