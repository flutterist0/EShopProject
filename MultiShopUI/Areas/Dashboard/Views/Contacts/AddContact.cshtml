@model Contact

<h2>Yeni Service elave et</h2>
<form asp-area="Dashboard" asp-controller="Contacts" asp-action="AddContact" method="post" enctype="multipart/form-data">

    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
