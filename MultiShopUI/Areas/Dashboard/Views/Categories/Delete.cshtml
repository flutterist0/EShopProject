@model Entities.Concrete.Category



<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card p-4" style="width: 400px;">
        <h2 class="text-center">Categoryni silmək istədiyinizdən əminsinizmi?</h2>
        <h4 class="text-center">@Model.Name</h4>
        <p class="text-center">Bu Categoryni silmək istədiyinizdən əminsiniz?</p>
        <form asp-action="Delete" method="post" class="text-center">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Sil</button>
            <a href="@Url.Action("GetAllCategories")" class="btn btn-secondary">İmtina et</a>
        </form>
    </div>
</div>
