@model ServiceAddDto

<h2>Yeni Service elave et</h2>
<form asp-action="AddServices" method="post" enctype="multipart/form-data">

    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IsFeatured" class="control-label"></label>
            <input asp-for="IsFeatured" class="form-check-input" type="checkbox" />
            <span asp-validation-for="IsFeatured" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="image" class="control-label">Service Şəkilləri</label>
            <input type="file" name="image" class="form-control" />
        </div>

        </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Əlavə Et</button>
    </div>
    </form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}