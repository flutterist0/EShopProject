@using Entities.Concrete

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model List<Service>
<h2>Service List</h2>
<div style="text-align: right; margin-bottom: 15px;">
    <a href="@Url.Action("AddServices", "Services")" class="btn btn-primary">Add Service</a>
</div>
@if (Model != null&&Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Service ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model)
            {
                <tr>
                    <td>@service.Id</td>
                    <td>@service.Title</td>
                    <td>@service.Description</td>
                    <td>
                        <a href="@Url.Action("EditService","Services", new { id = service.Id })" class="btn btn-warning">Edit</a>
                        <a href="@Url.Action("Delete","Services", new { id = service.Id })" class="btn btn-danger">Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No services found.</p>
}